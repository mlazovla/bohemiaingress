    <script>
        $( document ).ready(function() {
            // Animate to anchors
            $('a[href*=#]').on('click', function(event){
                var patt = new RegExp('^[^#]*');
                var localAddress = window.location.pathname.match(patt);
                var hrefAddress = $(this).attr('href').match(patt);

                if ( localAddress[0] == hrefAddress[0] ) {
                    event.preventDefault();
                    $('html,body').animate({ scrollTop:$(this.hash).offset().top}, 500);
                    if($('.navbar-main-collapse').css('display') !='none'){
                        $(".navbar-toggle").trigger( "click" );
                    }
                }
            });    
        });
    </script>
